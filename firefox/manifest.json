{
	"name": "Delta Math Interception (e)Xtension | DMIx",
	"manifest_version": 2,
	"version": "0.1.0",
	"description": "Free hacks for Delta Math, the math learning tool. [Firefox edition]",
	"author": "gemsvido",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"*://*deltamath.com/*",
		"https://raw.githubusercontent.com/*",
		"storage"
	],
	"icons": {
		"128": "assets/x128.png",
		"96": "assets/x96.png",
		"48": "assets/48.png",
		"32": "assets/32.png",
		"16": "assets/16.png"
	},

	"background": {
		"scripts": ["loadNil.js", "swal/sweetalert2.all.min.js"],
		"persistent": true
	},

	"content_scripts": [{
		"matches": ["*://*deltamath.com/app/student/*"],
		"js": ["loadNil.js", "swal/sweetalert2.all.min.js"]
	}],
	"browser_action": {
		"default_popup": "popup.html"
	}
}
